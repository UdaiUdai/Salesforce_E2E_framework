{
  "name": "salesforce-e2e-automation",
  "version": "1.0.0",
  "description": "Salesforce automation using playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:tc001": "playwright test tests/TC001_create_case.spec.ts",
    "test:tc002": "playwright test tests/TC002_create_individuals.spec.ts",
    "test:tc003": "playwright test tests/TC003_edit_individuals.spec.ts",
    "test:all": "playwright test tests/",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "allure:clean": "rm -rf allure-results allure-report"
  },
  "keywords": [],
  "author": "Udayaprasath",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/video.js": "^7.3.58",
    "allure-commandline": "^2.34.1",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "allure-playwright": "^3.4.3",
    "axios": "^1.13.2",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "jira-client": "^8.2.2",
    "jsdom": "^27.2.0",
    "mailslurp-client": "^16.0.0",
    "mysql2": "^3.15.3",
    "ortoni-report": "^4.0.1",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "playwright-indexeddb": "^1.0.0",
    "tesseract.js": "^4.1.1",
    "typescript": "^5.9.3",
    "video.js": "^8.23.4",
    "videojs-ads": "^0.1.0",
    "videojs-contrib-ads": "^7.5.2",
    "winston": "^3.18.3",
    "exceljs": "^4.4.0"
  }
